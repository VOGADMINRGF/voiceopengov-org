{
  "name": "vpm25",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@10.17.1",
  "workspaces": [
    "apps/*",
    "packages/*",
    "core",
    "data",
    "features"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --max-warnings=0",
    "test:ci": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":85,\"functions\":85,\"lines\":85,\"statements\":85}}'",

    "db:indexes": "tsx scripts/ensureIndexes.ts",

    "prisma:gen:web": "dotenvx run -f apps/web/.env.local -- prisma generate --schema=prisma/web/schema.prisma",
    "prisma:migrate:web": "dotenvx run -f apps/web/.env.local -- prisma migrate dev --schema=prisma/web/schema.prisma --name init",
    "prisma:deploy:web": "dotenvx run -f apps/web/.env.local -- prisma migrate deploy --schema=prisma/web/schema.prisma",

    "prisma:gen:core": "dotenvx run -f apps/web/.env.local -- prisma generate --schema=prisma/core/schema.prisma",
    "prisma:push:core": "dotenvx run -f apps/web/.env.local -- prisma db push --schema=prisma/core/schema.prisma",

    "prisma:gen:all": "pnpm -C apps/web run prisma:generate",
    "postinstall": "pnpm prisma:gen:all",

    "worker:dev": "npm --workspace @vog/worker run dev",
    "worker:build": "npm --workspace @vog/worker run build",
    "worker:start": "npm --workspace @vog/worker run start",

    "idx:core": "pnpm tsx apps/web/scripts/core.ensureIndexes.ts",
    "idx:votes": "pnpm tsx apps/web/scripts/votes.ensureIndexes.ts"
  },
  "devDependencies": {
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "dotenv": "^17.2.0",
    "prisma": "^6.14.0",
    "server-only": "^0.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "turbo": "^2.5.6",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.0.8",
    "@dnd-kit/sortable": "^7.0.2",
    "@dnd-kit/utilities": "^3.2.2",
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^6.14.0",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@types/jsonwebtoken": "^9.0.10",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "arangojs": "^10.1.2",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "formidable-serverless": "^1.1.1",
    "html2canvas": "^1.4.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.1",
    "kafkajs": "^2.2.4",
    "mongodb": "^6.18.0",
    "mongoose": "^8.16.3",
    "neo4j-driver": "^5.28.1",
    "next": "15.3.2",
    "nodemailer": "^6.10.1",
    "openai": "^5.11.0",
    "otplib": "^12.0.1",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "qrcode": "^1.5.4",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^5.5.0",
    "react-qr-code": "^2.0.18",
    "recharts": "^3.1.0",
    "sanitize-html": "^2.13.0",
    "swr": "^2.3.4",
    "vis-network": "^10.0.1",
    "zod": "^3.25.76"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}
