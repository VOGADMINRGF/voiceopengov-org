{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@db/web": [
        "src/shims/db-web.ts"
      ],
      "@db/core": [
        "src/shims/db-core.ts"
      ],
      "@core/triMongo": [
        "src/shims/core/db/triMongo.ts"
      ],
      "@core/db/triMongo": [
        "src/shims/core/db/triMongo.ts"
      ],
      "@models/*": [
        "src/models/*"
      ],
      "@ui/*": [
        "src/ui/*"
      ],
      "@context/LocaleContext": [
        "src/shims/context/LocaleContext.tsx"
      ],
      "@features/utils/ai/generateImage": [
        "src/shims/features/utils/ai/generateImage.ts"
      ],
      "@features/utils/ai/youClient": [
        "src/shims/features/utils/ai/youClient.ts"
      ]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.*",
    "**/__tests__/**",
    "src/_disabled/**",
    ".next/**"
  ]
}