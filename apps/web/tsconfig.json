{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@features/*": [
        "../../features/*"
      ],
      "@context/*": [
        "../../core/context/*"
      ],
      "@ui": [
        "../../packages/ui/src/index.ts"
      ],
      "@ui/*": [
        "../../packages/ui/src/*"
      ]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "../../core/**/*",
    "../../features/**/*",
    "../../packages/ui/src/**/*",
    "next-env.d.ts",
    "src/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "coverage"
  ]
}
