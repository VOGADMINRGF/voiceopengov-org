// prisma/web/schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "../../apps/web/src/db/web"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// ---------- ENUMS ----------
enum ContentKind {
  SWIPE
  EVENT
  SUNDAY_POLL
}

enum PublishStatus {
  draft
  review
  published
  archived
}

enum RegionMode {
  AUTO
  MANUAL
}

enum Locale {
  de
  en
  fr
  it
  es
  pl
  uk
  ru
  tr
  hi
  zh
  ar
}

//
// ---------- TOPIC / TAG ----------
model Topic {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  description String?
  locale      Locale   @default(de)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  items ContentItem[]
  tags  TopicTag[]

  @@index([locale])
  @@index([createdAt])
}

model Tag {
  id     String     @id @default(cuid())
  slug   String     @unique
  label  String
  topics TopicTag[]
  items  ItemTag[]
}

model TopicTag {
  id      String @id @default(cuid())
  topicId String
  tagId   String

  topic Topic @relation(fields: [topicId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  tag   Tag   @relation(fields: [tagId], references: [id], onDelete: Restrict, onUpdate: Cascade)

  @@unique([topicId, tagId])
  @@index([topicId])
  @@index([tagId])
}

model ItemTag {
  id     String @id @default(cuid())
  itemId String
  tagId  String

  item ContentItem @relation(fields: [itemId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  tag  Tag         @relation(fields: [tagId], references: [id], onDelete: Restrict, onUpdate: Cascade)

  @@unique([itemId, tagId])
  @@index([itemId])
  @@index([tagId])
}

//
// ---------- CONTENT ----------
model ContentItem {
  id   String      @id @default(cuid())
  kind ContentKind

  topicId String
  topic   Topic  @relation(fields: [topicId], references: [id], onDelete: Restrict, onUpdate: Cascade)

  locale    Locale  @default(de)
  title     String?
  text      String
  richText  String?
  sortOrder Int     @default(0) @map("order") // „order“ ist reserved → mappen

  status     PublishStatus @default(draft)
  authorName String?
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  publishAt DateTime?
  expireAt  DateTime?

  regionMode        RegionMode @default(AUTO)
  regionManualId    String?
  regionEffectiveId String?
  regionAuto        Json?

  validation Json?
  meta       Json?

  answerOptions AnswerOption[]
  tags          ItemTag[]

  @@index([kind, status, locale])
  @@index([publishAt])
  @@index([topicId])
  @@index([createdAt])
  // optionaler Performance-Index für Event-Teaser:
  @@index([topicId, kind, status, publishAt])
}

model AnswerOption {
  id        String      @id @default(cuid())
  itemId    String
  item      ContentItem @relation(fields: [itemId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  label     String
  value     String
  sortOrder Int         @default(0) @map("order")
  exclusive Boolean     @default(false)
  meta      Json?

  @@unique([itemId, sortOrder])
  @@unique([itemId, value])
}

//
// ---------- REGION / USER ----------
model Region {
  id    String @id @default(cuid())
  code  String @unique
  name  String
  level String

  userProfiles  UserProfile[]
  contributions Contribution[]
}

model UserProfile {
  userId   String  @id
  regionId String?
  region   Region? @relation(fields: [regionId], references: [id])
  // weitere Felder nach Bedarf …
}

//
// ---------- CONTRIBUTION PIPELINE ----------
model Contribution {
  id               String   @id @default(cuid())
  originalText     String
  userId           String?
  regionId         String?
  region           Region?  @relation(fields: [regionId], references: [id])
  topicsJson       Json?
  translationsJson Json?
  createdAt        DateTime @default(now())

  statements ContributionStatement[]

  @@index([createdAt])
  @@index([regionId])
  @@index([userId])
}

model ContributionStatement {
  id             String       @id @default(cuid())
  contributionId String
  contribution   Contribution @relation(fields: [contributionId], references: [id], onDelete: Cascade)
  order          Int
  text           String
  type           String
  polarity       String
  createdAt      DateTime     @default(now())

  @@index([contributionId, order])
}

//
// ---------- QUICK SIGNUP ----------
model QuickSignup {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  name      String?
  email     String?  @db.VarChar(190)
  consent   Boolean
  source    String   @default("quick")
  ip        String?  @db.VarChar(64)
  userAgent String?
  userId    String?

  @@index([email])
  @@index([createdAt])
  @@index([source])
}
