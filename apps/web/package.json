{
  "name": "@vog/web",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "pnpm dlx prisma generate --schema=../../prisma/web/schema.prisma && next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "prisma generate --schema ../../prisma/web/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema ../../prisma/web/schema.prisma",
    "prisma:deploy": "prisma migrate deploy --schema ../../prisma/web/schema.prisma",
    "idx:core": "tsx scripts/core.ensureIndexes.ts",
    "idx:votes": "tsx scripts/votes.ensureIndexes.ts",
    "idx:all": "pnpm run idx:core && pnpm run idx:votes"
  },
  "dependencies": {
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@vog/core": "workspace:*",
    "@vog/features": "workspace:*",
    "@ui": "workspace:*",
    "framer-motion": "^12.23.22",
    "next": "15.3.2",
    "qrcode": "^1.5.4",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-icons": "^5.2.1",
    "react-qr-code": "^2.0.18",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  }
}
