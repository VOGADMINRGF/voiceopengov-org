{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "stack:up": "docker compose -f docker-compose.graphdb.yml up -d",
    "stack:down": "docker compose -f docker-compose.graphdb.yml down",
    "stack:ps": "docker compose -f docker-compose.graphdb.yml ps",
    "dev": "next dev",
    "ping:dbs": "tsx scripts/ping.all.dbs.ts",
    "idx:core": "tsx scripts/core.ensureIndexes.ts",
    "idx:core-streams": "tsx scripts/core.ensureIndexes.ts",
    "idx:pii": "tsx scripts/pii.ensureIndexes.ts",
    "idx:votes": "tsx scripts/votes.ensureIndexes.ts",
    "idx:all": "pnpm run idx:core && pnpm run idx:pii && pnpm run idx:votes",
    "prisma:gen:web": "prisma generate --schema ../../prisma/web/schema.prisma",
    "prisma:migrate:web": "prisma migrate dev --schema ../../prisma/web/schema.prisma",
    "prisma:studio:web": "prisma studio --schema ../../prisma/web/schema.prisma",
    "prisma:gen:core": "dotenvx run -f ./.env.local -- pnpm -C ../../ run prisma:gen:core",
    "prisma:push:core": "dotenvx run -f ./.env.local -- pnpm -C ../../ run prisma:push:core",
    "prisma:gen:all": "pnpm -C apps/web run prisma:gen:web",
    "postinstall": "pnpm run prisma:gen:all || echo 'skip prisma:gen:all'",
    "openapi:lint": "npx @redocly/cli lint src/openapi/v1.yaml",
    "geo:index": "tsx scripts/mongo.ensure-geo-index.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.883.0",
    "@aws-sdk/s3-request-presigner": "^3.883.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "classnames": "^2.5.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.0",
    "framer-motion": "^12.16.0",
    "lucide-react": "^0.511.0",
    "next": "15.3.2",
    "next-auth": "^4.24.11",
    "next-intl": "^3.6.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "redis": "^4.7.1",
    "ui": "^0.2.4",
    "xlsx": "^0.18.5",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "10.4.14",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "postcss": "8.4.24",
    "tailwindcss": "3.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.8.3"
  }
}
