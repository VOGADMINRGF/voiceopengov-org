{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "noEmit": false,

    // explizit setzen, damit TS sicher JSX versteht
    "jsx": "react-jsx",
    "baseUrl": ".",
    "rootDir": "src",
    // auch hier Aliasse leeren, sonst self-import-Zyklus
    "paths": {},
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["**/*.test.*", "**/__tests__/**"]
}
