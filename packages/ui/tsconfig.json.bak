{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowJs": false,
    "checkJs": false,

    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,

    "baseUrl": ".",
    "rootDirs": ["src", "../../"],
    "paths": {
      "@core/*": ["../../core/*"],
      "@features/*": ["../../features/*"]
    },

    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "sourceMap": true
  },
  "include": ["src", "../../core", "../../features", "src/types"],
  "exclude": ["node_modules", "dist"]
}
