{
    "name": "@ui",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "description": "Shared UI kit (prebuilt to dist for fast Next builds).",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/types/index.d.ts",
        "import": "./dist/index.js",
        "default": "./dist/index.js"
      }
    },
    "files": [
      "dist"
    ],
    "sideEffects": false,
    "scripts": {
      "clean": "rimraf dist dist-types",
      "build": "pnpm run clean && pnpm run build:js && pnpm run build:types",
      "build:js": "tsup src/index.ts --format=esm --sourcemap --minify --treeshake --out-dir dist",
      "build:types": "tsc -p tsconfig.build.json",
      "dev": "tsup src/index.ts --format=esm --sourcemap --watch --out-dir dist",
      "typecheck": "tsc -p tsconfig.json --noEmit"
    },
    "peerDependencies": {
      "react": "^18.2.0 || ^19.0.0",
      "react-dom": "^18.2.0 || ^19.0.0"
    },
    "devDependencies": {
      "tsup": "^8.0.1",
      "typescript": "^5.6.3",
      "rimraf": "^6.0.1"
    }
  }
  