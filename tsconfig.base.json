{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": [
        "core/*"
      ],
      "@features/*": [
        "features/*"
      ],
      "@db-core": [
        "packages/db-core/src/client.ts"
      ],
      "@vog/ui": [
        "packages/ui/dist/index.d.ts"
      ],
      "@vog/ui/*": [
        "packages/ui/dist/*"
      ],
      "@ui": [
        "packages/ui/dist/index.d.ts"
      ],
      "@ui/*": [
        "packages/ui/dist/*"
      ],
      "@db/web": [
        "./packages/db-web/src/index.ts"
      ],
      "@db/web/*": [
        "./packages/db-web/src/*"
      ]
    },
    "types": [
      "node"
    ]
  }
}